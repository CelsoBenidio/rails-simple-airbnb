<p id="notice"><%= notice %></p>

<body>
  <div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
        <p>All 3 flats.</p>
    </div>
  </div>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-4">
        <div class="flat-card">
          <div class="flat-card-image" style="background-image: url('https://images.unsplash.com/photo-1494526585095-c41746248156?w=1200')"></div>
          <div class="flat-card-content">
            <div class="flat-card-title">
              <h4><%= flat.name %></h4>
            </div>
            <p><%= flat.address %></p>
            <div class="flex">
              <div class="flex">
                <i class="material-icons mr-2">people</i><span><%= flat.number_of_guests %></span>
              </div>
              <div class="flex ml-3">
                <i class="material-icons mr-2">euro_symbol</i> <%= flat.price_per_night %>
              </div>
            </div>
          </div>
          <div class="flat-card-actions">
            <a class="ml-3 text-primary"><%= link_to 'More info', flat_path(flat[:id]) %></a>
            <a class="ml-3 text-warning"><%= link_to 'Edit', edit_flat_path(flat[:id]) %></a>
            <a class="ml-3 text-danger"><%= link_to 'Remove', flat_path(flat), method: :delete, data:{confirm: "Are you sure?"} %></a>
          </div>
      </div>
    </div>
   <% end %>
  </div>
</div>
</body>




